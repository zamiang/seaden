block locals
  - assetPackage = 'all'
            
doctype html
html
  head
    include head
    block head
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'layout' + sd.CSS_EXT) )
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + assetPackage + sd.CSS_EXT) )
  body
    include ../header/template
    #main-layout-container.responsive-layout-container
    block body
    #scripts
      include scripts
      script( src=(sd.ASSET_PATH + 'layout' + sd.JS_EXT) )
      script( src=(sd.ASSET_PATH + assetPackage + sd.JS_EXT) )
      block scripts
    include ../footer/template
