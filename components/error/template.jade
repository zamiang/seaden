extends ../layout/templates/index.jade

block head
  include ../layout/templates/common_head


append locals
  - assetPackage = 'error_handler'

block body
  main#error-handler
    if code === 404      
      h1 The page you were looking for doesn't exist.
    else
      h1 Internal Error
      if detail
        pre= detail
      p Please contact <a href="mailto:support@seaden.com">support@seaden.com</a> with any questions.
